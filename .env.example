# Database Configuration
DATABASE_URL=url here
POSTGRES_USER=user here
POSTGRES_PASSWORD=password here
POSTGRES_DB=db name here

# LLM API Keys (can have multiple providers)
GROQ_API_KEY=your_groq_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration for Intent Detection
INTENT_LLM_PROVIDER=groq          # Options: groq, google, openai, anthropic
INTENT_LLM_MODEL=llama-3.3-70b-versatile
INTENT_LLM_API_KEY_NAME=GROQ_API_KEY  # Which API key to use from above
INTENT_LLM_TEMPERATURE=0.1

# LLM Configuration for Legal Question Answering
LEGAL_LLM_PROVIDER=google         # Options: groq, google, openai, anthropic
LEGAL_LLM_MODEL=gemini-2.0-flash-exp
LEGAL_LLM_API_KEY_NAME=GEMINI_API_KEY  # Which API key to use from above
LEGAL_LLM_TEMPERATURE=0.3

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=vidhi-ai-legal-index
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# Embedding Model Configuration
EMBEDDING_PROVIDER=pinecone       # Options: pinecone, openai, google
EMBEDDING_MODEL=multilingual-e5-large
EMBEDDING_API_KEY_NAME=PINECONE_API_KEY

# Storage Configuration
STORAGE_TYPE=local
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
STRUCTURED_DATA_PATH=data/structured

# Document Parsing Configuration
PARSER_TYPE=llama  # Options: llama, tesseract
LLAMA_PARSE_API_KEY=your_llama_parse_api_key_here

# RAG Configuration
RAG_TOP_K=5                       # Number of documents to retrieve
RAG_SCORE_THRESHOLD=0.7           # Minimum similarity score
